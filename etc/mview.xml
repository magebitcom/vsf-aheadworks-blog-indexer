<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Mview/etc/mview.xsd">
    <view id="vsbridge_cms_blog_indexer" class="Magebit\BlogIndexer\Model\Indexer\CmsBlog" group="indexer">
        <subscriptions>
            <table name="aw_blog_post" entity_column="id"/>
        </subscriptions>
    </view>
    <view id="vsbridge_cms_blog_category_indexer" class="Magebit\BlogIndexer\Model\Indexer\CmsBlogCategory" group="indexer">
        <subscriptions>
            <table name="aw_blog_category" entity_column="id"/>
        </subscriptions>
    </view>
</config>